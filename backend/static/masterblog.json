{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0"
  },
  "host": "127.0.0.1:5002",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "tags": [
    {
      "name": "Post",
      "description": "Post API - CRUD"
    }
  ],
  "paths": {
    "/posts": {
      "get": {
        "summary": "Return all posts",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Limit amount of posts per page",
            "default": 10,
            "required": false,
            "type": "integer"
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page to display",
            "default": 1,
            "required": false,
            "type": "integer"
          },
          {
            "name": "sort",
            "in": "query",
            "description": "Sort by content, title, author or date",
            "required": false,
            "type": "string",
            "enum": [
              "content",
              "title",
              "author",
              "date"
            ]
          },
          {
            "name": "order",
            "in": "query",
            "description": "Order descending or descending",
            "required": false,
            "type": "string",
            "enum": [
              "desc",
              "asc"
            ]
          }
        ],
        "tags": [
          "Post"
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      },
      "post": {
        "summary": "Adds a post to the blog",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Post",
            "in": "body",
            "description": "Post's information",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AddPost"
            }
          }
        ],
        "tags": [
          "Post"
        ],
        "responses": {
          "201": {
            "description": "Post added successfully"
          },
          "400": {
            "description": "Invalid request data"
          }
        }
      }
    },
    "/posts/{post_id}": {
      "delete": {
        "summary": "Delete post by id",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "post_id",
            "in": "path",
            "description": "The ID of the post to delete",
            "required": true,
            "type": "integer"
          }
        ],
        "tags": [
          "Post"
        ],
        "responses": {
          "200": {
            "description": "Post deleted successfully"
          },
          "404": {
            "description": "Couldn't find post"
          }
        }
      },
      "put": {
        "summary": "Updates a post by ID",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "post_id",
            "in": "path",
            "description": "The ID of the post to update",
            "required": true,
            "type": "integer"
          },
          {
            "name": "Post",
            "in": "body",
            "description": "Post's new information",
            "required": false,
            "schema": {
              "$ref": "#/definitions/UpdatePost"
            }
          }
        ],
        "tags": [
          "Post"
        ],
        "responses": {
          "200": {
            "description": "Post updated successfully"
          },
          "404": {
            "description": "Post not found"
          }
        }
      }
    },
    "/posts/search": {
      "get": {
        "summary": "Search through all posts",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "description": "Search in titles",
            "required": false,
            "type": "string"
          },
          {
            "name": "content",
            "in": "query",
            "description": "Search in content",
            "required": false,
            "type": "string"
          },
          {
            "name": "author",
            "in": "query",
            "description": "Search posts by author",
            "required": false,
            "type": "string"
          },
          {
            "name": "date",
            "in": "query",
            "description": "Search posts by date (YYYY-MM-DD)",
            "required": false,
            "type": "string",
            "example": "2023-12-31"
          }
        ],
        "tags": [
          "Post"
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    }
  },
  "definitions": {
    "AddPost": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the blog post",
          "example": "My blog post"
        },
        "content": {
          "type": "string",
          "description": "The content of the blog post",
          "example": "This is the content of my post."
        },
        "author":  {
          "type": "string",
          "description": "The author of the blog post",
          "example": "Roald Dahl"
        },
        "date":  {
          "type": "string",
          "description": "YYYY-MM-DD",
          "example": "2023-12-31"
        }
      },
      "required": [
        "title",
        "content"
      ]
    },
    "UpdatePost": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The new title for the blog post",
          "example": "My updated title"
        },
        "content": {
          "type": "string",
          "description": "The new content of the blog post",
          "example": "My updated content."
        },
        "author":  {
          "type": "string",
          "description": "The author of the blog post",
          "example": "Roald Dahl"
        },
        "date":  {
          "type": "string",
          "description": "YYYY-MM-DD",
          "example": "2023-12-31"
        }
      }
    }
  }
}